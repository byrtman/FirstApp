<?xml version="1.0" encoding="utf-8"?>
<com.tivo.byrt.firstapp.MainLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainLayout">

    <com.tivo.byrt.firstapp.TalkBackHandlerView
        android:id="@+id/vPad"
        android:layout_width="220dp"
        android:layout_height="168dp"
        android:layout_alignBottom="@+id/buttonWeb"
        android:layout_alignParentStart="true"
        android:layout_marginStart="165dp"
        android:layout_marginBottom="-96dp" />

    <SurfaceView
        android:id="@+id/surfaceView"
        android:layout_width="668dp"
        android:layout_height="430dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/buttonTalkBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="83dp"
        android:layout_marginEnd="136dp"
        android:text="@string/buttonTB" />

    <Button
        android:id="@+id/buttonWeb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonTalkBack"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="82dp"
        android:layout_marginEnd="136dp"
        android:text="@string/buttonWeb" />

</com.tivo.byrt.firstapp.MainLayout>